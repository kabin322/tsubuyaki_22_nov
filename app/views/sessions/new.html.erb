<div id="sessions-new">
  <div class="col-xs-5 login-content">
    <% if action_name == "create" %>
      <div class="alert alert-danger">
        メールアドレスまたはパスワードが正しくありません。
      </div>
    <% end %>
    <%= form_for @user, url: sessions_path, method: :post do |f| %>
      <h2>
        ログイン
      </h2>
      <div class="form-body">
        <div class="form-group">
          <%= f.label :email,"メールアドレス：hello@cyllabus.jp", class: "control-label" %>
          <%= f.text_field :email, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :password, "パスワード：6文字以上", class: "control-label" %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <%= f.submit "ログイン", class: "btn btn-success" %>
        <%= link_to root_path, class: "pull-right signup" do %>
          会員登録する
        <% end %>
        <div class="clear"></div>
      </div>
    <% end %>
  </div>
</div>
